<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<configSections>
		<section name="quartz" type="System.Configuration.NameValueSectionHandler, System, Version=1.0.5000.0,Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
		<sectionGroup name="common">
			<section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
		</sectionGroup>
	</configSections>

	<quartz>
		<add key="quartz.scheduler.instanceName" value="ServerScheduler"/>
		<add key="quartz.threadPool.type" value="Quartz.Simpl.SimpleThreadPool, Quartz"/>
		<add key="quartz.threadPool.threadCount" value="10"/>
		<add key="quartz.threadPool.threadPriority" value="2"/>
		<add key="quartz.plugin.xml.type" value="Quartz.Plugin.Xml.XMLSchedulingDataProcessorPlugin, Quartz"/>
		<add key="quartz.plugin.xml.fileNames" value="~/quartz_jobs.xml"/>
		<add key="quartz.scheduler.exporter.type" value="Quartz.Simpl.RemotingSchedulerExporter, Quartz"/>
		<add key="quartz.scheduler.exporter.port" value="555"/>
		<add key="quartz.scheduler.exporter.bindName" value="QuartzScheduler"/>
		<add key="quartz.scheduler.exporter.channelType" value="tcp"/>
		<add key="quartz.scheduler.exporter.channelName" value="httpQuartz"/>
	</quartz>

	<common>
		<logging>
			<factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
				<arg key="configType" value="INLINE"/>
			</factoryAdapter>
		</logging>
	</common>

	<log4net>
    <!--输出所有的日志到文件-->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/server.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="10MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
    </appender>
    <!--输出错误日志到文件-->
    <appender name="ErrorRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/error.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="1MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR"/>
        <levelMax value="FATAL"/>
      </filter>
    </appender>
    <appender name="FireCommandFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/FireCommand.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="1MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
      </filter>
    </appender>
    <appender name="FirePBrigadeFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/FirePBrigade.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="1MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
      </filter>
    </appender>
    <appender name="FireHBrigadeFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/FireHBrigade.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="1MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
      </filter>
    </appender>
    <appender name="FireOfficeFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value="logs/FireOffice.log"/>
      <!--追加方式写-->
      <appendToFile value="true"/>
      <!--每次写1000个文件后覆盖-->
      <maxSizeRollBackups value="500"/>
      <!--每个文件做大500k-->
      <maximumFileSize value="1MB"/>
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
      </filter>
    </appender>
    <root>
      <level value="all"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="ErrorRollingFileAppender"/>
    </root>
    <logger name="FireCommandLogger">
      <level value="all"></level>
      <appender-ref ref="FireCommandFileAppender"/>
    </logger>
    <logger name="FirePBrigadeLogger">
      <level value="all"></level>
      <appender-ref ref="FirePBrigadFileAppender"/>
    </logger>
    <logger name="FireHBrigadeLogger">
      <level value="all"></level>
      <appender-ref ref="FireHBrigadeFileAppender"/>
    </logger>
    <logger name="FireOfficeLogger">
      <level value="all"></level>
      <appender-ref ref="FireOfficeFileAppender"/>
    </logger>
  </log4net>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
	</startup>

</configuration>


